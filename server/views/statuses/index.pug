extends ../layouts/application.pug

block content
  a.nav-link(href=route('newStatus'))= t('views.statuses.newStatus')
  table.table.table-striped
    thead
      tr
        th= t('views.statuses.id')
        th= t('views.statuses.name')
        th= t('views.statuses.createdAt')
    tbody
      each status in statuses
        tr
          td= status.id
          td= status.name
          td= formatDate(status.createdAt)
          td
            a(href=`${buildRoute(status.id, 'statuses')}/edit`)= t('views.labels.edit')
            +formFor()(action=buildRoute(status.id, 'statuses') method='post')            
              input(name='_method' type='hidden' value='delete')
              input.btn.btn-link(type='submit' value= t('views.labels.delete'))