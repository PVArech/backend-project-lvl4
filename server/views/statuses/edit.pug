extends ../layouts/application.pug

block header
  = t('views.statuses.edit.signUp')

block content
  +formFor()(action=buildRoute(status.id, 'statuses') method='post')
    +input(status, 'name', errors)(type="text")
    input(name='_method' type='hidden' value='patch')
    +submit(status)(value=t('views.statuses.edit.submit'))