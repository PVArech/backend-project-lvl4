extends ../layouts/application.pug

block header
  = t('views.tasks.new.signUp')

block content
  +formFor()(action=route('tasks') method='post')
    +input(task, 'name', errors)(type="text")
    +textarea(task, 'description')
    +select(task, statuses, 'statusId', errors)
    +select(task, users, 'executorId')
    +select(task, labels, 'labels')(multiple)
    +submit(task)(value=t('views.tasks.new.submit'))